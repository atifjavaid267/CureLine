<% if @diseases.empty? %>
  <%= render partial: "shared/data_not_found", locals: { message: 'No Disease Found!' } %>
<% else %>
  <div class="grid lg:grid-cols-2 p-4 border rounded-md shadow-md m-2">
    <% @diseases.each.with_index(@diseases.offset + 1) do |disease, counter| %>
      <div class="flex flex-col md:flex-row justify-between items-center p-4 border rounded-md shadow-lg my-4 mx-2">
        <div class="py-3 md:py-2">
          <p class="text-gray-600 font-bold"> <%= "#{counter}. #{disease.name}" %></p>
        </div>
        <div class="py-3 md:py-2 flex">
          <%= link_to "Remedies", view_remedies_disease_path(disease), class: "mx-1 mt-2 bg-blue-500 text-white px-7 sm:px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300" %>
          <% if can? :destroy, Disease %>
            <%= button_to "Delete", disease, method: :delete, data: { confirm: "Are you sure to delete disease?"}, class: "mx-1 mt-2 bg-red-500 text-white px-7 sm:px-4 py-2 rounded-md hover:bg-red-600 transition duration-300" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <div class="pb-10 flex flex-row items-center justify-center">
    <%= will_paginate @diseases, class: "bg-gray-300 rounded py-3 px-5" %>
  </div>
<% end %>
