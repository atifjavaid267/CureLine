<% if @health_concerns.empty? %>
  <%= render partial: "shared/data_not_found", locals: { message: 'No Health Concern Found!' } %>
<% else %>
  <div class="bg-bg_img bg-cover h-screen w-full">
    <div class="bg-black bg-opacity-80 bg-cover h-screen w-full">
      <div class="flex justify-center pt-5 font-semibold text-xl lg:text-2xl">
        <h3 class="text-white">Your Health Concerns</h3>
      </div>
      <div class="grid lg:grid-cols-2 p-4rounded-md shadow-md m-2">
        <% @health_concerns.each.with_index(@health_concerns.offset + 1) do |health_concern, counter| %>
          <div class="flex flex-col md:flex-row justify-between items-center p-4 border-gray-200 bg-gray-700 bg-opacity-80 text-white rounded-md shadow-lg my-4 mx-2">
            <div class="py-3 md:py-2">
              <p class="font-bold"> <%= "#{counter}. " %> <span class="text-lg sm:text-xl"><%= "#{health_concern.disease.name}" %></span></p>
            </div>
            <div class="py-3 md:py-2 flex">
              <%= link_to "Remedies", view_remedies_disease_path(health_concern.disease), class: "mx-1 mt-2 bg-blue-500 text-white px-7 px-2 py-2 rounded-md hover:bg-blue-600 transition duration-300" %>
              <% if can? :destroy, HealthConcern %>
                <%= button_to "Remove", health_concern_path(health_concern), method: :delete, data: { confirm: "Are you sure to delete health concern?"}, class: "mx-1 mt-2 bg-red-500 text-white px-7 px-2 py-2 rounded-md hover:bg-red-600 transition duration-300" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <br>
      <div class="pb-10 flex flex-row items-center justify-center">
        <%= will_paginate @health_concerns, class: "bg-gray-300 rounded py-3 px-5" %>
      </div>
    </div>
  </div>
<% end %>
