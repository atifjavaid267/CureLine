<div class="fixed h-screen w-full bg-bg_login bg-cover bg-no-repeat">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="h-full w-full flex flex-col justify-center items-center">
    <div class="flex flex-col items-center justify-center text-black rounded-xl bg-white bg-opacity-30 backdrop-blur-3xl w-80 h-auto space-y-5 py-10">
      <h2 class="text-3xl font-semibold text-primary">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="flex flex-col space-y-3">
          <div class="field">
            <%= f.label :name %><br/>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "rounded-lg" %>
          </div>
          <div class="field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autocomplete: "email", class: "rounded-lg" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <span>(<%= @minimum_password_length %>
                characters minimum)</span>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg" %>
          </div>
        </div>
      </div>
      <div class="actions mt-5">
        <%= f.submit "Sign up", class: "w-full py-2 text-white rounded-sm px-32 bg-primary hover:bg-primary_light" %>
      </div>
    <% end %>
    <div class="mt-10 mr-16">
      <% if controller_name != 'sessions' %>
        <span>Already have an account?
          <%= link_to "Log in", new_session_path(resource_name), class: "text-link hover:underline" %>
        </span>
      <% end %>
    </div>
  </div>
</div>
