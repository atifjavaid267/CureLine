<div class="fixed h-screen w-full bg-bg_login bg-cover bg-no-repeat">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="h-full w-full flex flex-col justify-center items-center">
    <div class="flex flex-col items-center justify-center text-black rounded-xl bg-white bg-opacity-30 backdrop-blur-3xl w-80 h-auto space-y-5 py-10">
      <h2 class="text-3xl font-semibold text-primary">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="flex flex-col space-y-3">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg" %>
          </div>
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg" %>
          </div>
          <div class="flex justify-between pt-2">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="flex justify-between">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Sign up", new_registration_path(resource_name), class: "text-link font-semibold mr-2 hover:underline" %><br />
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="actions mt-5">
        <%= f.submit "Log in", class: "w-full py-2 text-white rounded-sm px-32 bg-primary hover:bg-primary_light" %>
      </div>
      <div class="mt-10 pr-14">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <span>Forgot your password?</span>
          <%= link_to "click here", new_password_path(resource_name), class: "text-link hover:underline" %><br />
        <% end %>
      </div>
    <% end %>
  </div>
</div>
