<div class="h-screen w-full bg-bg_login bg-cover bg-no-repeat">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="h-full w-full flex justify-center items-center">
    <div class="flex flex-col items-center justify-center text-black rounded-xl bg-white bg-opacity-30 backdrop-blur-3xl w-full sm:w-80 h-full sm:h-auto space-y-5 mt-5">
      <h2 class="text-3xl font-semibold mt-5">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="flex flex-col space-y-3">
          <div class="field mb-5">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg" %>
          </div>
          <div class="actions">
            <%= f.submit "Send reset password instructions", class: "w-full bg-primary py-2 text-white" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
