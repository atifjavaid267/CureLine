<div class="flex flex-col h-screen my-auto justify-center items-center">
  <h1 class="flex justify-center font-bold text-3xl text-indigo-900 mb-10">Forgot Your Password</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field my-2 border-b-2 w-full">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", autocomplete: "email", class: "border-none w-full" %>
    </div>
    <div class="flex justify-center actions rounded-md bg-blue-500 hover:bg-blue-700 text-white py-3 px-4 my-4">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>
  <% if controller_name != 'sessions' %>
    <div class="flex flex-col justify-center py-2">
      <div class="flex flex-row justify-center text-gray-500 font-semibold">
        <p>You have already registered</p>
      </div>
      <div class="flex flex-row justify-center py-1 text-indigo-900 hover:font-semibold">
        <%= link_to "Log in", new_session_path(resource_name, class: "flex justify-center") %><br/>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
