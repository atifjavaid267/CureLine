<div class="fixed h-screen w-full bg-bg_login bg-cover bg-no-repeat">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="h-full w-full flex flex-col justify-center items-center">
    <div class="flex flex-col items-center justify-center text-black rounded-xl bg-white bg-opacity-30 backdrop-blur-3xl w-80 h-auto space-y-5 py-10">
      <h2 class="text-3xl font-semibold text-primary">Reset Password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="flex flex-col">
          <div class="field mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg" %>
          </div>
        </div>
      </div>
      <div class="actions mt-5">
        <%= f.submit "Send reset password instructions", class: "w-full bg-primary py-2 px-8 text-white rounded-sm" %>
      </div>
    <% end %>
    <div class="mt-10 mr-20">
      <%- if controller_name != 'sessions' %>
        <span>Want to sign in account?
          <%= link_to "Log in", new_session_path(resource_name), class: "text-link hover:underline" %>
        </span>
      <% end %>
    </div>
  </div>
